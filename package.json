{
  "name": "pixelforge",
  "version": "1.0.0",
  "description": "Distributed image processing system",
  "homepage": "https://github.com/DaniielDz/PixelForge#readme",
  "bugs": {
    "url": "https://github.com/DaniielDz/PixelForge/issues"
  },
