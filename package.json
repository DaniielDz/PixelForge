    "globals": "16.5.0",
    "prettier": "3.7.4",
    "prisma": "7.2.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.1"
  },
  "dependencies": {
    "dotenv": "17.2.3",
    "@prisma/adapter-pg": "7.2.0",
    "@prisma/client": "7.2.0",
    "bullmq": "5.66.3",
    "express": "5.2.1",
    "minio": "8.0.6",
    "multer": "2.0.2",
    "sharp": "0.34.5",
